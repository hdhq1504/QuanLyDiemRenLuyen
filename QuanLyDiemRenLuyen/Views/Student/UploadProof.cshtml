@model QuanLyDiemRenLuyen.Models.UploadProofViewModel
@{
    ViewBag.Title = "Upload minh chứng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .upload-container {
        max-width: 700px;
        margin: 0 auto;
        padding: 24px;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 24px;
        color: #64748b;
        text-decoration: none;
        font-weight: 500;
    }

    .back-link:hover {
        color: #2563eb;
    }

    .upload-card {
        background: white;
        border-radius: 8px;
        padding: 32px;
        border: 1px solid #e2e8f0;
    }

    .page-title {
        font-size: 24px;
        font-weight: 600;
        color: #0f172a;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .activity-name {
        color: #2563eb;
        font-size: 16px;
        margin-bottom: 24px;
        padding-bottom: 20px;
        border-bottom: 1px solid #e2e8f0;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-weight: 500;
        color: #374151;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-label.required::after {
        content: " *";
        color: #dc2626;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        font-size: 14px;
        background: #fff;
    }

    .form-control:focus {
        outline: none;
        border-color: #2563eb;
    }

    .file-upload-area {
        border: 2px dashed #d1d5db;
        border-radius: 8px;
        padding: 32px;
        text-align: center;
        cursor: pointer;
        background: #f8fafc;
    }

    .file-upload-area:hover {
        border-color: #2563eb;
        background: #eff6ff;
    }

    .file-upload-area.has-file {
        border-color: #10b981;
        background: #f0fdf4;
    }

    .file-upload-icon {
        font-size: 48px;
        color: #94a3b8;
        margin-bottom: 16px;
    }

    .file-upload-area.has-file .file-upload-icon {
        color: #10b981;
    }

    .file-upload-text {
        font-size: 14px;
        color: #64748b;
        margin-bottom: 8px;
    }

    .file-upload-hint {
        font-size: 12px;
        color: #94a3b8;
    }

    .selected-file {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-top: 12px;
        padding: 10px 14px;
        background: #f0fdf4;
        border: 1px solid #bbf7d0;
        border-radius: 6px;
        color: #166534;
        font-size: 14px;
    }

    .current-proof {
        background: #f8fafc;
        padding: 16px;
        border-radius: 8px;
        margin-bottom: 24px;
        border: 1px solid #e2e8f0;
    }

    .current-proof-title {
        font-weight: 600;
        color: #0f172a;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .current-proof-info {
        font-size: 14px;
        color: #64748b;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .badge {
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-warning { background: #fef3c7; color: #92400e; }
    .badge-success { background: #d1fae5; color: #065f46; }
    .badge-danger { background: #fee2e2; color: #991b1b; }

    .form-hint {
        font-size: 12px;
        color: #94a3b8;
        margin-top: 6px;
    }

    .btn-group {
        display: flex;
        gap: 12px;
        margin-top: 24px;
        padding-top: 20px;
        border-top: 1px solid #e2e8f0;
    }

    .btn {
        padding: 12px 24px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

    .btn-primary {
        background: #2563eb;
        color: white;
        flex: 1;
        justify-content: center;
    }

    .btn-secondary {
        background: #f1f5f9;
        color: #475569;
        border: 1px solid #e2e8f0;
    }

    .alert {
        padding: 14px 16px;
        border-radius: 6px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 14px;
    }

    .alert-danger {
        background: #fef2f2;
        color: #991b1b;
        border: 1px solid #fecaca;
    }

    .alert-info {
        background: #eff6ff;
        color: #1e40af;
        border: 1px solid #bfdbfe;
    }
</style>

<div class="upload-container">
    <a href="@Url.Action("Detail", "Activities", new { id = Model.ActivityId })" class="back-link">
        <i class="fas fa-arrow-left"></i> Quay lại chi tiết hoạt động
    </a>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i> @ViewBag.ErrorMessage
        </div>
    }

    <div class="upload-card">
        <h1 class="page-title">
            <i class="fas fa-cloud-upload-alt" style="color: #2563eb;"></i>
            Upload minh chứng
        </h1>
        <p class="activity-name">
            <i class="fas fa-calendar-check"></i> @Model.ActivityTitle
        </p>

        @if (!string.IsNullOrEmpty(Model.CurrentProofFilePath))
        {
            <div class="current-proof">
                <div class="current-proof-title">
                    <i class="fas fa-file-alt"></i> Minh chứng hiện tại
                </div>
                <div class="current-proof-info">
                    <i class="fas fa-info-circle"></i> Trạng thái:
                    @if (Model.CurrentProofStatus == "PENDING")
                    {
                        <span class="badge badge-warning"><i class="fas fa-clock"></i> Chờ duyệt</span>
                    }
                    else if (Model.CurrentProofStatus == "APPROVED")
                    {
                        <span class="badge badge-success"><i class="fas fa-check"></i> Đã duyệt</span>
                    }
                    else if (Model.CurrentProofStatus == "REJECTED")
                    {
                        <span class="badge badge-danger"><i class="fas fa-times"></i> Bị từ chối</span>
                    }
                </div>
                <div class="current-proof-info">
                    <i class="fas fa-clock"></i> Đã upload: @Model.CurrentProofUploadedAt?.ToString("dd/MM/yyyy HH:mm")
                </div>
                <div class="alert alert-info" style="margin: 12px 0 0 0;">
                    <i class="fas fa-info-circle"></i> Upload file mới sẽ thay thế file cũ
                </div>
            </div>
        }

        @using (Html.BeginForm("UploadProof", "Activities", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="activityId" value="@Model.ActivityId" />

            <div class="form-group">
                <label class="form-label required">File minh chứng</label>
                <div class="file-upload-area" id="dropArea" onclick="document.getElementById('proofFile').click()">
                    <input type="file" name="proofFile" id="proofFile" accept=".jpg,.jpeg,.png,.pdf" required style="display: none;" />
                    <div class="file-upload-icon">
                        <i class="fas fa-cloud-upload-alt"></i>
                    </div>
                    <div class="file-upload-text">
                        <i class="fas fa-mouse-pointer"></i> Nhấn để chọn file hoặc kéo thả vào đây
                    </div>
                    <div class="file-upload-hint">
                        <i class="fas fa-file-image"></i> JPG, PNG hoặc PDF - Tối đa 5MB
                    </div>
                </div>
                <div class="selected-file" id="selectedFile" style="display: none;">
                    <i class="fas fa-check-circle"></i>
                    <span id="fileName"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label"><i class="fas fa-sticky-note"></i> Ghi chú</label>
                <textarea name="note" class="form-control" rows="3" placeholder="Nhập ghi chú bổ sung (nếu có)..."></textarea>
                <p class="form-hint"><i class="fas fa-info-circle"></i> Tối đa 500 ký tự</p>
            </div>

            <div class="btn-group">
                <a href="@Url.Action("Detail", "Activities", new { id = Model.ActivityId })" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
                <button type="submit" class="btn btn-primary" id="submitBtn">
                    <i class="fas fa-upload"></i> Upload minh chứng
                </button>
            </div>
        }
    </div>
</div>

<script>
    var proofInput = document.getElementById('proofFile');
    var dropArea = document.getElementById('dropArea');
    var selectedFile = document.getElementById('selectedFile');
    var fileName = document.getElementById('fileName');

    proofInput.addEventListener('change', function(e) {
        if (e.target.files && e.target.files[0]) {
            showSelectedFile(e.target.files[0]);
        }
    });

    // Drag and drop
    dropArea.addEventListener('dragover', function(e) {
        e.preventDefault();
        dropArea.style.borderColor = '#2563eb';
        dropArea.style.background = '#eff6ff';
    });

    dropArea.addEventListener('dragleave', function(e) {
        e.preventDefault();
        dropArea.style.borderColor = '#d1d5db';
        dropArea.style.background = '#f8fafc';
    });

    dropArea.addEventListener('drop', function(e) {
        e.preventDefault();
        dropArea.style.borderColor = '#d1d5db';
        dropArea.style.background = '#f8fafc';
        
        if (e.dataTransfer.files && e.dataTransfer.files[0]) {
            proofInput.files = e.dataTransfer.files;
            showSelectedFile(e.dataTransfer.files[0]);
        }
    });

    function showSelectedFile(file) {
        fileName.textContent = file.name + ' (' + (file.size / 1024 / 1024).toFixed(2) + ' MB)';
        selectedFile.style.display = 'flex';
        dropArea.classList.add('has-file');
    }

    // Form submit
    document.querySelector('form').addEventListener('submit', function(e) {
        if (!proofInput.files || !proofInput.files[0]) {
            e.preventDefault();
            alert('Vui lòng chọn file minh chứng');
            return false;
        }

        var file = proofInput.files[0];
        var maxSize = 5 * 1024 * 1024; // 5MB

        if (file.size > maxSize) {
            e.preventDefault();
            alert('File không được vượt quá 5MB');
            return false;
        }

        var submitBtn = document.getElementById('submitBtn');
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang upload...';
    });
</script>
