@model QuanLyDiemRenLuyen.Models.StudentDashboardViewModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dashboard-container {
        padding: 24px;
        background: #f8fafc;
        min-height: 100vh;
    }

    .welcome-section {
        background: #2563eb;
        color: white;
        padding: 32px;
        border-radius: 8px;
        margin-bottom: 32px;
    }

    .welcome-section h1 {
        margin: 0 0 8px 0;
        font-size: 28px;
        font-weight: 600;
    }

    .welcome-section p {
        margin: 0;
        font-size: 14px;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 32px;
    }

    .stat-card {
        background: white;
        padding: 24px;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
    }

    .stat-card h3 {
        color: #64748b;
        font-size: 12px;
        margin: 0 0 8px 0;
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .stat-card .value {
        font-size: 32px;
        font-weight: 700;
        color: #2563eb;
        margin: 0;
    }

    .content-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 20px;
    }

    .card {
        background: white;
        padding: 24px;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        margin-bottom: 20px;
    }

    .card h2 {
        margin: 0 0 20px 0;
        color: #0f172a;
        font-size: 18px;
        font-weight: 600;
        padding-bottom: 12px;
        border-bottom: 1px solid #e2e8f0;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #f1f5f9;
    }

    .info-row:last-child {
        border-bottom: none;
    }

    .info-label {
        font-weight: 600;
        color: #64748b;
        font-size: 14px;
    }

    .info-value {
        color: #0f172a;
        font-size: 14px;
    }

    .activity-item {
        padding: 16px;
        border-left: 3px solid #2563eb;
        background: #f8fafc;
        margin-bottom: 12px;
        border-radius: 4px;
    }

    .activity-item h4 {
        margin: 0 0 8px 0;
        color: #0f172a;
        font-size: 16px;
        font-weight: 600;
    }

    .activity-item p {
        margin: 4px 0;
        font-size: 13px;
        color: #64748b;
    }

    .activity-item .status {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
    }

    .status.registered {
        background: #fef3c7;
        color: #92400e;
    }

    .status.checked-in {
        background: #d1fae5;
        color: #065f46;
    }

    .notification-item {
        padding: 16px;
        background: #f8fafc;
        margin-bottom: 12px;
        border-radius: 4px;
        border-left: 3px solid #f59e0b;
    }

    .notification-item h4 {
        margin: 0 0 4px 0;
        color: #0f172a;
        font-size: 14px;
        font-weight: 600;
    }

    .notification-item p {
        margin: 0;
        font-size: 13px;
        color: #64748b;
    }

    .score-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px;
        background: #f8fafc;
        margin-bottom: 12px;
        border-radius: 4px;
    }

    .score-item .term-name {
        font-weight: 600;
        color: #0f172a;
        font-size: 14px;
    }

    .score-item .score-value {
        font-size: 24px;
        font-weight: 700;
        color: #2563eb;
    }

    @@media (max-width: 768px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="dashboard-container">
    <div class="welcome-section">
        @{
            var userName = Model != null && Model.User != null ? Model.User.FullName : "Sinh viên";
            var studentCode = Model != null && Model.StudentInfo != null ? Model.StudentInfo.StudentCode : "";
            var className = Model != null && Model.StudentInfo != null ? Model.StudentInfo.ClassName : "";
        }
        <h1>Xin chào, @userName!</h1>
        <p>@studentCode @(string.IsNullOrEmpty(studentCode) || string.IsNullOrEmpty(className) ? "" : "-") @className
        </p>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <h3>Điểm Rèn Luyện Hiện Tại</h3>
            @{
                var currentScore = Model != null && Model.Statistics != null ? Model.Statistics.CurrentTermScore : 70;
            }
            <p class="value">@currentScore</p>
        </div>
        <div class="stat-card">
            <h3>Hoạt Động Đã Đăng Ký</h3>
            @{
                var totalRegistered = Model != null && Model.Statistics != null ? Model.Statistics.TotalActivitiesRegistered
                : 0;
            }
            <p class="value">@totalRegistered</p>
        </div>
        <div class="stat-card">
            <h3>Hoạt Động Hoàn Thành</h3>
            @{
                var totalCompleted = Model != null && Model.Statistics != null ? Model.Statistics.TotalActivitiesCompleted :
                0;
            }
            <p class="value">@totalCompleted</p>
        </div>
        <div class="stat-card">
            <h3>Thông Báo Chưa Đọc</h3>
            @{
                var unreadCount = Model != null && Model.Statistics != null ? Model.Statistics.UnreadNotificationCount : 0;
            }
            <p class="value">@unreadCount</p>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Left Column -->
        <div>
            <!-- Student Information -->
            <div class="card">
                <h2>Thông Tin Sinh Viên</h2>
                @{
                    var studentInfo = Model != null ? Model.StudentInfo : null;
                    var userInfo = Model != null ? Model.User : null;
                }
                <div class="info-row">
                    <span class="info-label">Mã sinh viên:</span>
                    <span class="info-value">@(studentInfo != null && !string.IsNullOrEmpty(studentInfo.StudentCode) ? studentInfo.StudentCode : "N/A")</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Lớp:</span>
                    <span class="info-value">@(studentInfo != null && !string.IsNullOrEmpty(studentInfo.ClassName) ? studentInfo.ClassName : "N/A")</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Khoa:</span>
                    <span class="info-value">@(studentInfo != null && !string.IsNullOrEmpty(studentInfo.DepartmentName) ? studentInfo.DepartmentName : "N/A")</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Email:</span>
                    <span class="info-value">@(userInfo != null && !string.IsNullOrEmpty(userInfo.Email) ? userInfo.Email : "N/A")</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Số điện thoại:</span>
                    <span class="info-value">@(studentInfo != null && !string.IsNullOrEmpty(studentInfo.Phone) ? studentInfo.Phone : "N/A")</span>
                </div>
            </div>

            <!-- Recent Activities -->
            <div class="card">
                <h2>Hoạt Động Gần Đây</h2>
                @if (Model.RecentActivities != null && Model.RecentActivities.Any())
                {
                    foreach (var activity in Model.RecentActivities)
                    {
                        <div class="activity-item">
                            <h4>@activity.Title</h4>
                            <p><strong>Thời gian:</strong> @activity.StartAt.ToString("dd/MM/yyyy HH:mm") -
                                @activity.EndAt.ToString("dd/MM/yyyy HH:mm")</p>
                            @{
                                var location = !string.IsNullOrEmpty(activity.Location) ? activity.Location : "N/A";
                                var points = activity.Points.HasValue ? activity.Points.Value.ToString() : "N/A";
                            }
                            <p><strong>Địa điểm:</strong> @location</p>
                            <p><strong>Điểm:</strong> @points</p>
                            <p>
                                @{
                                    var statusClass = activity.RegistrationStatus == "CHECKED_IN" ? "checked-in" : "registered";
                                    var statusText = activity.RegistrationStatus == "CHECKED_IN" ? "Đã tham gia" : "Đã đăng ký";
                                }
                                <span class="status @statusClass">
                                    @statusText
                                </span>
                            </p>
                        </div>
                    }
                }
                else
                {
                    <p style="color: #94a3b8; text-align: center; padding: 20px;">Chưa có hoạt động nào</p>
                }
            </div>

            <!-- Term Scores -->
            <div class="card">
                <h2>Điểm Rèn Luyện Các Học Kỳ</h2>
                @if (Model.TermScores != null && Model.TermScores.Any())
                {
                    foreach (var score in Model.TermScores)
                    {
                        <div class="score-item">
                            <div>
                                <div class="term-name">@score.TermName</div>
                                <small style="color: #94a3b8;">
                                    @(score.Status == "APPROVED" ? "Đã duyệt" : "Tạm tính")
                                    @if (score.ApprovedAt.HasValue)
                                    {
                                        <text> - @score.ApprovedAt.Value.ToString("dd/MM/yyyy")</text>
                                    }
                                </small>
                            </div>
                            <div class="score-value">@score.Total</div>
                        </div>
                    }
                }
                else
                {
                    <p style="color: #94a3b8; text-align: center; padding: 20px;">Chưa có điểm rèn luyện</p>
                }
            </div>
        </div>

        <!-- Right Column -->
        <div>
            <!-- Notifications -->
            <div class="card">
                <h2>Thông Báo Mới</h2>
                @if (Model.UnreadNotifications != null && Model.UnreadNotifications.Any())
                {
                    foreach (var notification in Model.UnreadNotifications)
                    {
                        <div class="notification-item">
                            <h4>@notification.Title</h4>
                            @{
                                var content = notification.Content;
                                var displayContent = !string.IsNullOrEmpty(content) && content.Length > 100
                                    ? content.Substring(0, 100) + "..."
                                    : content;
                            }
                            <p>@Html.Raw(displayContent)</p>
                            <small style="color: #94a3b8;">@notification.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                    }
                }
                else
                {
                    <p style="color: #94a3b8; text-align: center; padding: 20px;">Không có thông báo mới</p>
                }
            </div>
        </div>
    </div>
</div>