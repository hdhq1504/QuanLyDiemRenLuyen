@model QuanLyDiemRenLuyen.Models.ScoreViewModel
@{
    ViewBag.Title = "Điểm Rèn Luyện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .scores-container {
        max-width: 1200px;
        margin: 32px auto;
        padding: 0 24px;
    }

    .page-header {
        background: #2563eb;
        color: white;
        padding: 32px;
        border-radius: 8px;
        margin-bottom: 32px;
        border: 1px solid #e2e8f0;
    }

    .page-header h1 {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 12px;
    }

    .student-info {
        display: flex;
        gap: 24px;
        font-size: 14px;
    }

    .statistics-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 32px;
    }

    .stat-card {
        background: white;
        padding: 24px;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        border-left: 3px solid #2563eb;
    }

    .stat-card .icon {
        font-size: 28px;
        color: #2563eb;
        margin-bottom: 12px;
    }

    .stat-card .label {
        font-size: 12px;
        color: #64748b;
        margin-bottom: 6px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-card .value {
        font-size: 24px;
        font-weight: 700;
        color: #0f172a;
    }

    .scores-table-container {
        background: white;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        overflow: hidden;
    }

    .table-header {
        padding: 20px 24px;
        border-bottom: 1px solid #e2e8f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .table-header h2 {
        font-size: 18px;
        font-weight: 600;
        color: #0f172a;
    }

    .scores-table {
        width: 100%;
        border-collapse: collapse;
    }

    .scores-table thead {
        background: #f8fafc;
    }

    .scores-table th {
        padding: 12px 16px;
        text-align: left;
        font-weight: 600;
        color: #0f172a;
        font-size: 14px;
        border-bottom: 1px solid #e2e8f0;
    }

    .scores-table td {
        padding: 16px;
        border-bottom: 1px solid #f1f5f9;
        font-size: 14px;
    }

    .scores-table tbody tr:hover {
        background-color: #f8fafc;
    }

    .score-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 12px;
    }

    .score-excellent {
        background: #d1fae5;
        color: #065f46;
    }

    .score-good {
        background: #dbeafe;
        color: #1e40af;
    }

    .score-average {
        background: #fef3c7;
        color: #92400e;
    }

    .score-weak {
        background: #fee2e2;
        color: #991b1b;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
    }

    .status-approved {
        background: #d1fae5;
        color: #065f46;
    }

    .status-provisional {
        background: #fef3c7;
        color: #92400e;
    }

    .btn-view-detail {
        padding: 8px 16px;
        background: #2563eb;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 13px;
        font-weight: 500;
        text-decoration: none;
    }

    .btn-view-detail:hover {
        background: #1e40af;
        text-decoration: none;
    }

    .empty-state {
        text-align: center;
        padding: 48px 20px;
        color: #64748b;
    }

    .empty-state i {
        font-size: 48px;
        color: #e2e8f0;
        margin-bottom: 16px;
    }
</style>

<div class="scores-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1><i class="fas fa-chart-line"></i> Điểm Rèn Luyện</h1>
        <div class="student-info">
            <span><i class="fas fa-user"></i> @Model.StudentName</span>
            <span><i class="fas fa-id-card"></i> MSSV: @(string.IsNullOrEmpty(Model.StudentCode) ? "Chưa cập nhật" : Model.StudentCode)</span>
            <span><i class="fas fa-users"></i> Lớp: @(string.IsNullOrEmpty(Model.ClassName) ? "Chưa cập nhật" : Model.ClassName)</span>
        </div>
    </div>

    <!-- Statistics -->
    <div class="statistics-grid">
        <div class="stat-card">
            <div class="icon"><i class="fas fa-star"></i></div>
            <div class="label">Điểm Trung Bình</div>
            <div class="value">@Model.Statistics.AverageScore.ToString("F2")</div>
        </div>
        <div class="stat-card">
            <div class="icon"><i class="fas fa-arrow-up"></i></div>
            <div class="label">Điểm Cao Nhất</div>
            <div class="value">@Model.Statistics.HighestScore.ToString("F2")</div>
        </div>
        <div class="stat-card">
            <div class="icon"><i class="fas fa-calendar-alt"></i></div>
            <div class="label">Tổng Số Học Kỳ</div>
            <div class="value">@Model.Statistics.TotalTerms</div>
        </div>
        <div class="stat-card">
            <div class="icon"><i class="fas fa-check-circle"></i></div>
            <div class="label">Đã Phê Duyệt</div>
            <div class="value">@Model.Statistics.ApprovedTerms</div>
        </div>
    </div>

    <!-- Scores Table -->
    <div class="scores-table-container">
        <div class="table-header">
            <h2><i class="fas fa-list"></i> Điểm Theo Học Kỳ</h2>
        </div>

        @if (Model.TermScores != null && Model.TermScores.Count > 0)
        {
            <table class="scores-table">
                <thead>
                    <tr>
                        <th>Học Kỳ</th>
                        <th>Năm Học</th>
                        <th>Điểm</th>
                        <th>Xếp Loại</th>
                        <th>Trạng Thái</th>
                        <th>Ngày Duyệt</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var score in Model.TermScores)
                    {
                        <tr>
                            <td><strong>@score.TermName</strong></td>
                            <td>@score.TermYear</td>
                            <td><strong style="font-size: 16px; color: #667eea;">@score.Total.ToString("F2")</strong></td>
                            <td>
                                @{
                                    var badgeClass = "score-average";
                                    if (score.Total >= 90) { badgeClass = "score-excellent"; }
                                    else if (score.Total >= 80) { badgeClass = "score-good"; }
                                    else if (score.Total >= 65) { badgeClass = "score-average"; }
                                    else { badgeClass = "score-weak"; }
                                }
                                <span class="score-badge @badgeClass">@score.Classification</span>
                            </td>
                            <td>
                                @if (score.Status == "APPROVED")
                                {
                                    <span class="status-badge status-approved">
                                        <i class="fas fa-check-circle"></i> Đã duyệt
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge status-provisional">
                                        <i class="fas fa-clock"></i> Tạm thời
                                    </span>
                                }
                            </td>
                            <td>
                                @if (score.ApprovedAt.HasValue)
                                {
                                    @score.ApprovedAt.Value.ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <span style="color: #999;">Chưa duyệt</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("ScoreDetail", "Student", new { scoreId = score.ScoreId })"
                                   class="btn-view-detail">
                                    <i class="fas fa-eye"></i> Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <h3>Chưa có điểm rèn luyện</h3>
                <p>Bạn chưa có điểm rèn luyện nào được ghi nhận.</p>
            </div>
        }
    </div>
</div>
