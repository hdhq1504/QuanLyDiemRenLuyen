<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Qu·∫£n L√Ω ƒêi·ªÉm R√®n Luy·ªán</title>

    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #f8fafc;
            color: #0f172a;
            font-size: 14px;
        }

        /* Header */
        .admin-header {
            background: #2563eb;
            color: white;
            padding: 16px 32px;
            border-bottom: 1px solid #e2e8f0;
            position: fixed;
            top: 0;
            left: 260px;
            right: 0;
            z-index: 999;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: left 0.3s ease;
        }

        .admin-header.sidebar-collapsed {
            left: 70px;
        }

        .admin-header h1 {
            font-size: 20px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .sidebar-toggle {
            background: transparent;
            border: none;
            color: white;
            font-size: 20px;
            cursor: pointer;
            padding: 8px;
            border-radius: 6px;
        }

        .sidebar-toggle:hover {
            background: rgba(255, 255, 255, 0.1);
        }

        /* Sidebar */
        .admin-sidebar {
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            width: 260px;
            background: white;
            border-right: 1px solid #e2e8f0;
            display: flex;
            flex-direction: column;
            transition: width 0.3s ease;
            z-index: 1000;
        }

        .admin-sidebar.collapsed {
            width: 70px;
        }

        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .brand {
            font-size: 24px;
        }

        .brand-title {
            font-size: 16px;
            font-weight: 700;
            color: #0f172a;
            white-space: nowrap;
        }

        .admin-sidebar.collapsed .brand-title {
            display: none;
        }

        .user-profile {
            padding: 20px;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .admin-sidebar.collapsed .user-profile {
            padding: 20px 10px;
            justify-content: center;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #2563eb;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 16px;
            flex-shrink: 0;
        }

        .user-info {
            flex: 1;
            min-width: 0;
        }

        .admin-sidebar.collapsed .user-info {
            display: none;
        }

        .user-name {
            font-weight: 600;
            color: #0f172a;
            font-size: 14px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .user-role {
            font-size: 12px;
            color: #64748b;
        }

        .admin-sidebar.collapsed .brand-title,
        .sidebar-menu {
            flex: 1;
            overflow-y: auto;
            padding: 12px 0;
        }

        .nav-item {
            padding: 12px 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            color: #64748b;
            text-decoration: none;
            border-left: 3px solid transparent;
            font-weight: 500;
            transition: all 0.2s;
        }

        .admin-sidebar.collapsed .nav-item {
            padding: 12px;
            justify-content: center;
        }

        .nav-item:hover {
            background: #f8fafc;
            color: #2563eb;
        }

        .nav-item.active {
            background: #dbeafe;
            color: #2563eb;
            border-left-color: #2563eb;
            font-weight: 600;
        }

        .nav-item i {
            width: 20px;
            text-align: center;
            font-size: 18px;
            flex-shrink: 0;
        }

        .admin-sidebar.collapsed .nav-item span {
            display: none;
        }

        .sidebar-footer {
            padding: 16px;
            border-top: 1px solid #e2e8f0;
        }

        .btn-logout {
            display: flex;
            align-items: center;
            gap: 12px;
            width: 100%;
            padding: 10px 16px;
            background: #fee2e2;
            color: #991b1b;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.2s;
        }

        .btn-logout:hover {
            background: #fecaca;
        }

        .admin-sidebar.collapsed .btn-logout {
            padding: 10px;
            justify-content: center;
        }

        .admin-sidebar.collapsed .btn-logout span {
            display: none;
        }

        /* Main Content */
        .admin-content {
            margin-left: 260px;
            margin-top: 60px;
            padding: 32px;
            min-height: calc(100vh - 60px);
            transition: margin-left 0.3s ease;
        }

        .admin-content.sidebar-collapsed {
            margin-left: 70px;
        }

        /* Alerts */
        .alert {
            padding: 16px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            border: 1px solid;
        }

        .alert-success {
            background: #f0fdf4;
            color: #166534;
            border-color: #bbf7d0;
        }

        .alert-danger {
            background: #fef2f2;
            color: #991b1b;
            border-color: #fecaca;
        }

        .alert-info {
            background: #f0f9ff;
            color: #075985;
            border-color: #bae6fd;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <div class="admin-header" id="adminHeader">
        <h1>
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
            @ViewBag.Title
        </h1>
    </div>

    <!-- Sidebar -->
    <div class="admin-sidebar" id="adminSidebar">
        <!-- Sidebar Header -->
        <div class="sidebar-header">
            <span class="brand">üõ°Ô∏è</span>
            <span class="brand-title">ADMIN PANEL</span>
        </div>

        <!-- User Profile -->
        <div class="user-profile">
            <div class="user-avatar">
                @{
                    var fullName = Session["FullName"] != null ? Session["FullName"].ToString() : "Admin";
                    var initial = fullName.Length > 0 ? fullName.Substring(0, 1).ToUpper() : "A";
                }
                @initial
            </div>
            <div class="user-info">
                <div class="user-name">@Session["FullName"]</div>
                <div class="user-role">Administrator</div>
            </div>
        </div>

        <div class="sidebar-menu">
            <a href="@Url.Action("Dashboard", "Admin")"
                class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")">
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
            <a href="@Url.Action("Activities", "Admin")"
                class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "Activities" ? "active" : "")">
                <i class="fas fa-calendar-alt"></i>
                <span>Qu·∫£n l√Ω ho·∫°t ƒë·ªông</span>
            </a>
            <a href="@Url.Action("Activities", "Admin", new { approvalStatus = "PENDING" })" class="nav-item">
                <i class="fas fa-check-circle"></i>
                <span>Ph√™ duy·ªát ho·∫°t ƒë·ªông</span>
            </a>
            <a href="@Url.Action("Index", "Proofs")" class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Proofs" ? "active" : "")">
                <i class="fas fa-file-contract"></i>
                <span>Qu·∫£n l√Ω minh ch·ª©ng</span>
            </a>
            <a href="@Url.Action("Index", "Users")" class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Users" ? "active" : "")">
                <i class="fas fa-users"></i>
                <span>Qu·∫£n l√Ω ng∆∞·ªùi d√πng</span>
            </a>
            <a href="@Url.Action("Index", "Classes")" class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Classes" ? "active" : "")">
                <i class="fas fa-chalkboard-teacher"></i>
                <span>Qu·∫£n l√Ω L·ªõp</span>
            </a>
            <a href="@Url.Action("Index", "Database")" class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Database" ? "active" : "")">
                <i class="fas fa-database"></i>
                <span>Qu·∫£n tr·ªã Database</span>
            </a>
            <a href="@Url.Action("ClassScores", "Admin")" class="nav-item">
                <i class="fas fa-graduation-cap"></i>
                <span>Qu·∫£n l√Ω ƒëi·ªÉm l·ªõp</span>
            </a>
            <a href="@Url.Action("ApproveScores", "Admin")" class="nav-item">
                <i class="fas fa-check-double"></i>
                <span>X√©t duy·ªát ƒëi·ªÉm</span>
            </a>
            <a href="@Url.Action("ReviewRequests", "Admin")" class="nav-item">
                <i class="fas fa-file-signature"></i>
                <span>Ph√∫c kh·∫£o ƒëi·ªÉm</span>
            </a>
            <a href="@Url.Action("Reports", "Admin")" class="nav-item">
                <i class="fas fa-chart-bar"></i>
                <span>B√°o c√°o th·ªëng k√™</span>
            </a>
            <a href="@Url.Action("Settings", "Admin")" class="nav-item">
                <i class="fas fa-cog"></i>
                <span>C√†i ƒë·∫∑t</span>
            </a>
        </div>

        <div class="sidebar-footer">
            <a href="#" onclick="document.getElementById('logoutForm').submit(); return false;" class="btn-logout">
                <i class="fas fa-sign-out-alt"></i>
                <span>ƒêƒÉng xu·∫•t</span>
            </a>
            <form id="logoutForm" action="@Url.Action("Logout", "Account")" method="post" style="display:none;">
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>

    <!-- Main Content -->
    <div class="admin-content" id="adminContent">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                <span>@TempData["ErrorMessage"]</span>
            </div>
        }
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                <span>@ViewBag.ErrorMessage</span>
            </div>
        }

        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Sidebar Toggle
            $('#sidebarToggle').click(function () {
                $('#adminSidebar').toggleClass('collapsed');
                $('#adminHeader').toggleClass('sidebar-collapsed');
                $('#adminContent').toggleClass('sidebar-collapsed');
                
                // Save state to localStorage
                const isCollapsed = $('#adminSidebar').hasClass('collapsed');
                localStorage.setItem('adminSidebarCollapsed', isCollapsed);
            });

            // Restore state from localStorage
            const isCollapsed = localStorage.getItem('adminSidebarCollapsed') === 'true';
            if (isCollapsed) {
                $('#adminSidebar').addClass('collapsed');
                $('#adminHeader').addClass('sidebar-collapsed');
                $('#adminContent').addClass('sidebar-collapsed');
            }
        });
    </script>
    @RenderSection("scripts", required: false)
</body>

</html>