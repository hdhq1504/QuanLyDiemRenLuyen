            border-color: white;
        }

        /* Sidebar */
        .admin-sidebar {
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            width: 260px;
            background: white;
            border-right: 1px solid #e2e8f0;
            overflow-y: auto;
            padding: 20px 0;
        }

        .admin-sidebar.collapsed {
            width: 70px;
        }

        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid #e2e8f0;
            font-size: 16px;
            font-weight: 700;
            color: #0f172a;
        }

        .admin-sidebar.collapsed .sidebar-header {
            padding: 20px 10px;
            text-align: center;
            font-size: 20px;
        }

        .admin-sidebar .nav-item {
            padding: 12px 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            color: #64748b;
            text-decoration: none;
            border-left: 3px solid transparent;
            font-weight: 500;
        }

        .admin-sidebar.collapsed .nav-item {
            padding: 12px;
            justify-content: center;
        }

        .admin-sidebar .nav-item:hover {
            background: #f1f5f9;
            color: #2563eb;
        }

        .admin-sidebar .nav-item.active {
            background: #dbeafe;
            color: #2563eb;
            border-left-color: #2563eb;
            font-weight: 600;
        }

        .admin-sidebar .nav-item i {
            width: 20px;
            text-align: center;
            flex-shrink: 0;
        }

        .admin-sidebar.collapsed .nav-item span {
            display: none;
        }

        /* Main Content */
        .admin-content {
            margin-left: 260px;
            margin-top: 60px;
            padding: 32px;
            min-height: calc(100vh - 60px);
        }

        .admin-content.sidebar-collapsed {
            margin-left: 70px;
        }

        .content-header {
            margin-bottom: 24px;
        }

        .content-header h2 {
            font-size: 24px;
            color: #0f172a;
            margin-bottom: 4px;
            font-weight: 600;
        }

        .content-header p {
            color: #64748b;
            font-size: 14px;
        }

        /* Alerts */
        .alert {
            padding: 16px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            border: 1px solid;
        }

        .alert-success {
            background: #f0fdf4;
            color: #166534;
            border-color: #bbf7d0;
        }

        .alert-danger {
            background: #fef2f2;
            color: #991b1b;
            border-color: #fecaca;
        }

        .alert-info {
            background: #f0f9ff;
            color: #075985;
            border-color: #bae6fd;
        }
    </style>
</head>

<body>
