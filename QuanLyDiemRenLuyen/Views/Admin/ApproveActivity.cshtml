@model QuanLyDiemRenLuyen.Models.ActivityApprovalViewModel
@{
    ViewBag.Title = "Phê duyệt hoạt động";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .detail-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        padding: 30px;
        margin-bottom: 25px;
    }

    .detail-header {
        border-bottom: 2px solid #e9ecef;
        padding-bottom: 20px;
        margin-bottom: 25px;
    }

    .detail-header h3 {
        font-size: 24px;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .status-badges {
        display: flex;
        gap: 10px;
        margin-top: 10px;
    }

    .badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
    }

    .badge-pending {
        background: #fff3cd;
        color: #856404;
    }

    .badge-approved {
        background: #d4edda;
        color: #155724;
    }

    .badge-rejected {
        background: #f8d7da;
        color: #721c24;
    }

    .badge-open {
        background: #d1ecf1;
        color: #0c5460;
    }

    .badge-closed {
        background: #e2e3e5;
        color: #383d41;
    }

    .detail-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 25px;
    }

    .detail-item {
        padding: 15px;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .detail-item label {
        display: block;
        font-size: 13px;
        color: #7f8c8d;
        margin-bottom: 5px;
        font-weight: 600;
    }

    .detail-item .value {
        font-size: 15px;
        color: #2c3e50;
        font-weight: 500;
    }

    .detail-full {
        grid-column: 1 / -1;
    }

    .stats-row {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 15px;
        margin-bottom: 25px;
    }

    .stat-box {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
    }

    .stat-box h4 {
        font-size: 28px;
        margin-bottom: 5px;
    }

    .stat-box p {
        font-size: 13px;
        opacity: 0.9;
    }

    .approval-form {
        background: #f8f9fa;
        padding: 25px;
        border-radius: 10px;
        margin-top: 25px;
    }

    .approval-form h4 {
        font-size: 18px;
        color: #2c3e50;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #5a6c7d;
        margin-bottom: 8px;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #e0e0e0;
        border-radius: 6px;
        font-size: 14px;
    }

    .form-control:focus {
        outline: none;
        border-color: #667eea;
    }

    .btn-group {
        display: flex;
        gap: 15px;
        margin-top: 25px;
    }

    .btn {
        padding: 12px 30px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 15px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-success {
        background: #28a745;
        color: white;
    }

    .btn-success:hover {
        background: #218838;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
    }

    .btn-danger {
        background: #dc3545;
        color: white;
    }

    .btn-danger:hover {
        background: #c82333;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
    }

    .btn-secondary {
        background: #6c757d;
        color: white;
    }

    .btn-secondary:hover {
        background: #5a6268;
    }
</style>

<div class="content-header">
    <h2><i class="fas fa-check-circle"></i> Phê duyệt hoạt động</h2>
    <p>Chi tiết và phê duyệt hoạt động</p>
</div>

<div class="detail-card">
    <div class="detail-header">
        <h3>@Model.Title</h3>
        <div class="status-badges">
            @if (Model.Status == "OPEN")
            {
                <span class="badge badge-open">Đang mở</span>
            }
            else if (Model.Status == "CLOSED")
            {
                <span class="badge badge-closed">Đã đóng</span>
            }

            @if (Model.ApprovalStatus == "PENDING")
            {
                <span class="badge badge-pending">Chờ phê duyệt</span>
            }
            else if (Model.ApprovalStatus == "APPROVED")
            {
                <span class="badge badge-approved">Đã phê duyệt</span>
            }
            else if (Model.ApprovalStatus == "REJECTED")
            {
                <span class="badge badge-rejected">Đã từ chối</span>
            }
        </div>
    </div>

    <!-- Statistics -->
    <div class="stats-row">
        <div class="stat-box" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <h4>@Model.MaxSeats</h4>
            <p>Số chỗ tối đa</p>
        </div>
        <div class="stat-box" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
            <h4>@Model.CurrentRegistrations</h4>
            <p>Đã đăng ký</p>
        </div>
        <div class="stat-box" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <h4>@Model.CurrentCheckIns</h4>
            <p>Đã tham gia</p>
        </div>
        <div class="stat-box" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
            <h4>@(Model.Points.HasValue? Model.Points.Value.ToString() : "N/A")</h4>
            <p>Điểm rèn luyện</p>
        </div>
    </div>

    <!-- Details -->
    <div class="detail-grid">
        <div class="detail-item">
            <label>Người tổ chức</label>
            <div class="value">@Model.OrganizerName</div>
        </div>
        <div class="detail-item">
            <label>Email</label>
            <div class="value">@Model.OrganizerEmail</div>
        </div>
        <div class="detail-item">
            <label>Thời gian bắt đầu</label>
            <div class="value">@Model.StartAt.ToString("dd/MM/yyyy HH:mm")</div>
        </div>
        <div class="detail-item">
            <label>Thời gian kết thúc</label>
            <div class="value">@Model.EndAt.ToString("dd/MM/yyyy HH:mm")</div>
        </div>
        <div class="detail-item">
            <label>Địa điểm</label>
            <div class="value">@Model.Location</div>
        </div>
        <div class="detail-item">
            <label>Tiêu chí</label>
            <div class="value">@Model.CriterionName</div>
        </div>
        <div class="detail-item">
            <label>Ngày tạo</label>
            <div class="value">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
        </div>
        @if (Model.ApprovedAt.HasValue)
        {
            <div class="detail-item">
                <label>Ngày phê duyệt</label>
                <div class="value">@Model.ApprovedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ApprovedBy))
        {
            <div class="detail-item">
                <label>Người phê duyệt</label>
                <div class="value">@Model.ApprovedBy</div>
            </div>
        }
        <div class="detail-item detail-full">
            <label>Mô tả</label>
            <div class="value">@Model.Description</div>
        </div>
    </div>

    <!-- Approval Form -->
    @if (Model.ApprovalStatus == "PENDING")
    {
        <div class="approval-form">
            <h4><i class="fas fa-clipboard-check"></i> Phê duyệt hoạt động</h4>
            @using (Html.BeginRouteForm("AdminActivities", new { action = "Approve" }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="ActivityId" value="@Model.Id" />

                <div class="form-group">
                    <label>Ghi chú (tùy chọn)</label>
                    <textarea name="Note" class="form-control" rows="3" placeholder="Nhập ghi chú nếu cần..."></textarea>
                </div>

                <div class="btn-group">
                    <button type="submit" name="Action" value="APPROVE" class="btn btn-success">
                        <i class="fas fa-check"></i> Phê duyệt
                    </button>
                    <button type="submit" name="Action" value="REJECT" class="btn btn-danger">
                        <i class="fas fa-times"></i> Từ chối
                    </button>
                    <a href="@Url.RouteUrl("AdminActivities", new { action = "Index" })" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="btn-group">
            <a href="@Url.RouteUrl("AdminActivities", new { action = "Index" })" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
            @if (Model.CurrentRegistrations > 0)
            {
                <a href="@Url.Action("Registrations", "Activities", new { id = Model.Id })" class="btn btn-success">
                    <i class="fas fa-users"></i> Xem danh sách đăng ký
                </a>
            }
        </div>
    }
</div>