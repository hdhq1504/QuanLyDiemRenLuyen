@model QuanLyDiemRenLuyen.Models.ClassScoreViewModel
@{
    ViewBag.Title = "Quản Lý Điểm Lớp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .class-scores-container {
        padding: 30px;
    }

    .page-header {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        margin-bottom: 30px;
    }

    .page-header h1 {
        font-size: 28px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 15px;
    }

    .class-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .info-box {
        padding: 15px;
        background: #f8f9fa;
        border-radius: 8px;
        border-left: 4px solid #667eea;
    }

    .info-box .label {
        font-size: 13px;
        color: #666;
        margin-bottom: 5px;
    }

    .info-box .value {
        font-size: 18px;
        font-weight: 600;
        color: #2c3e50;
    }

    .statistics-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        text-align: center;
    }

    .stat-card .icon {
        font-size: 36px;
        color: #667eea;
        margin-bottom: 10px;
    }

    .stat-card .value {
        font-size: 32px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .stat-card .label {
        font-size: 14px;
        color: #666;
    }

    .scores-table-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .table-toolbar {
        padding: 20px 25px;
        border-bottom: 2px solid #f0f0f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
    }

    .table-toolbar h2 {
        font-size: 20px;
        font-weight: 600;
        color: #2c3e50;
    }

    .toolbar-actions {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary {
        background: #667eea;
        color: white;
    }

    .btn-primary:hover {
        background: #5568d3;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .btn-success {
        background: #28a745;
        color: white;
    }

    .btn-success:hover {
        background: #218838;
    }

    .btn-secondary {
        background: #6c757d;
        color: white;
    }

    .btn-secondary:hover {
        background: #5a6268;
    }

    .scores-table {
        width: 100%;
        border-collapse: collapse;
    }

    .scores-table thead {
        background: #f8f9fa;
    }

    .scores-table th {
        padding: 15px 20px;
        text-align: left;
        font-weight: 600;
        color: #2c3e50;
        font-size: 14px;
        border-bottom: 2px solid #e9ecef;
    }

    .scores-table td {
        padding: 18px 20px;
        border-bottom: 1px solid #f0f0f0;
        font-size: 14px;
    }

    .scores-table tbody tr {
        transition: background-color 0.2s;
    }

    .scores-table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .score-input {
        width: 80px;
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 14px;
        text-align: center;
    }

    .score-input:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .classification-badge {
        display: inline-block;
        padding: 5px 12px;
        border-radius: 15px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-excellent {
        background: #d4edda;
        color: #155724;
    }

    .badge-good {
        background: #d1ecf1;
        color: #0c5460;
    }

    .badge-average {
        background: #fff3cd;
        color: #856404;
    }

    .badge-weak {
        background: #f8d7da;
        color: #721c24;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 5px 12px;
        border-radius: 15px;
        font-size: 12px;
        font-weight: 600;
    }

    .status-approved {
        background: #d4edda;
        color: #155724;
    }

    .status-provisional {
        background: #fff3cd;
        color: #856404;
    }

    .action-buttons {
        display: flex;
        gap: 8px;
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 13px;
    }

    .btn-edit {
        background: #ffc107;
        color: #000;
    }

    .btn-edit:hover {
        background: #e0a800;
    }

    .btn-approve {
        background: #28a745;
        color: white;
    }

    .btn-approve:hover {
        background: #218838;
    }

    .checkbox-cell {
        text-align: center;
    }

    .checkbox-cell input[type="checkbox"] {
        width: 18px;
        height: 18px;
        cursor: pointer;
    }
</style>

<div class="class-scores-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1><i class="fas fa-graduation-cap"></i> Quản Lý Điểm Lớp: @Model.ClassName</h1>
        <div class="class-info">
            <div class="info-box">
                <div class="label">Mã lớp</div>
                <div class="value">@Model.ClassCode</div>
            </div>
            <div class="info-box">
                <div class="label">Khoa</div>
                <div class="value">@Model.DepartmentName</div>
            </div>
            <div class="info-box">
                <div class="label">Học kỳ</div>
                <div class="value">@Model.TermName</div>
            </div>
            <div class="info-box">
                <div class="label">Cố vấn</div>
                <div class="value">@Model.AdvisorName</div>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="statistics-cards">
        <div class="stat-card">
            <div class="icon"><i class="fas fa-users"></i></div>
            <div class="value">@Model.Statistics.TotalStudents</div>
            <div class="label">Tổng sinh viên</div>
        </div>
        <div class="stat-card">
            <div class="icon"><i class="fas fa-check-circle"></i></div>
            <div class="value">@Model.Statistics.ApprovedStudents</div>
            <div class="label">Đã phê duyệt</div>
        </div>
        <div class="stat-card">
            <div class="icon"><i class="fas fa-star"></i></div>
            <div class="value">@Model.Statistics.AverageScore.ToString("F2")</div>
            <div class="label">Điểm trung bình</div>
        </div>
        <div class="stat-card">
            <div class="icon"><i class="fas fa-arrow-up"></i></div>
            <div class="value">@Model.Statistics.HighestScore.ToString("F2")</div>
            <div class="label">Điểm cao nhất</div>
        </div>
    </div>

    <!-- Scores Table -->
    <div class="scores-table-container">
        <div class="table-toolbar">
            <h2><i class="fas fa-list"></i> Danh Sách Điểm</h2>
            <div class="toolbar-actions">
                <button class="btn btn-success" onclick="approveSelected()">
                    <i class="fas fa-check"></i> Phê duyệt đã chọn
                </button>
                <button class="btn btn-secondary" onclick="exportToExcel()">
                    <i class="fas fa-file-excel"></i> Xuất Excel
                </button>
            </div>
        </div>

        @if (Model.Students != null && Model.Students.Count > 0)
        {
            <form id="scoresForm" method="post" action="@Url.Action("ApproveScores", "Admin")">
                @Html.AntiForgeryToken()
                <input type="hidden" name="classId" value="@Model.ClassId" />
                <input type="hidden" name="termId" value="@Model.TermId" />

                <table class="scores-table">
                    <thead>
                        <tr>
                            <th class="checkbox-cell">
                                <input type="checkbox" id="selectAll" onclick="toggleSelectAll(this)" />
                            </th>
                            <th>STT</th>
                            <th>MSSV</th>
                            <th>Họ và tên</th>
                            <th>Điểm</th>
                            <th>Xếp loại</th>
                            <th>Trạng thái</th>
                            <th>Hoạt động</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Students.Count; i++)
                        {
                            var student = Model.Students[i];
                            <tr>
                                <td class="checkbox-cell">
                                    @if (student.CanApprove)
                                    {
                                        <input type="checkbox" name="scoreIds" value="@student.ScoreId" class="score-checkbox" />
                                    }
                                </td>
                                <td>@(i + 1)</td>
                                <td><strong>@student.StudentCode</strong></td>
                                <td>@student.StudentName</td>
                                <td>
                                    @if (student.CanEdit)
                                    {
                                        <input type="number" class="score-input" value="@student.Total" min="0" max="100"
                                            step="0.01" onchange="updateScore('@student.ScoreId', this.value)" />
                                    }
                                    else
                                    {
                                        <strong style="font-size: 16px; color: #667eea;">@student.Total.ToString("F2")</strong>
                                    }
                                </td>
                                <td>
                                    @{
                                        var badgeClass = "badge-average";
                                        if (student.Total >= 90) badgeClass = "badge-excellent";
                                        else if (student.Total >= 80) badgeClass = "badge-good";
                                        else if (student.Total >= 65) badgeClass = "badge-average";
                                        else badgeClass = "badge-weak";
                                    }
                                    <span class="classification-badge @badgeClass">@student.Classification</span>
                                </td>
                                <td>
                                    @if (student.Status == "APPROVED")
                                    {
                                        <span class="status-badge status-approved">
                                            <i class="fas fa-check-circle"></i> Đã duyệt
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-badge status-provisional">
                                            <i class="fas fa-clock"></i> Tạm thời
                                        </span>
                                    }
                                </td>
                                <td>@student.ActivityCount</td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("ScoreDetail", "Admin", new { scoreId = student.ScoreId })"
                                            class="btn btn-primary btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (student.CanEdit)
                                        {
                                            <button type="button" class="btn btn-edit btn-sm"
                                                onclick="editScore('@student.ScoreId')">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        }
                                        @if (student.CanApprove)
                                        {
                                            <button type="button" class="btn btn-approve btn-sm"
                                                onclick="approveSingle('@student.ScoreId')">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>
        }
        else
        {
            <div style="text-align: center; padding: 60px 20px; color: #999;">
                <i class="fas fa-inbox" style="font-size: 64px; display: block; margin-bottom: 20px;"></i>
                <h3>Chưa có dữ liệu điểm</h3>
                <p>Lớp này chưa có điểm rèn luyện nào được ghi nhận.</p>
            </div>
        }
    </div>
</div>

<script>
    function toggleSelectAll(checkbox) {
        const checkboxes = document.querySelectorAll('.score-checkbox');
        checkboxes.forEach(cb => cb.checked = checkbox.checked);
    }

    function approveSelected() {
        const checkboxes = document.querySelectorAll('.score-checkbox:checked');
        if (checkboxes.length === 0) {
            alert('Vui lòng chọn ít nhất một sinh viên để phê duyệt');
            return;
        }

        if (confirm(`Bạn có chắc muốn phê duyệt ${checkboxes.length} điểm đã chọn?`)) {
            document.getElementById('scoresForm').submit();
        }
    }

    function approveSingle(scoreId) {
        if (confirm('Bạn có chắc muốn phê duyệt điểm này?')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("ApproveScore", "Admin")';

            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]').cloneNode();
            form.appendChild(tokenInput);

            const scoreInput = document.createElement('input');
            scoreInput.type = 'hidden';
            scoreInput.name = 'scoreId';
            scoreInput.value = scoreId;
            form.appendChild(scoreInput);

            document.body.appendChild(form);
            form.submit();
        }
    }

    function updateScore(scoreId, newValue) {
        if (newValue < 0 || newValue > 100) {
            alert('Điểm phải từ 0 đến 100');
            return;
        }

        fetch('@Url.Action("UpdateScore", "Admin")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
            },
            body: JSON.stringify({
                scoreId: scoreId,
                total: parseFloat(newValue)
            })
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Cập nhật điểm thành công');
                    location.reload();
                } else {
                    alert('Lỗi: ' + data.message);
                }
            })
            .catch(error => {
                alert('Có lỗi xảy ra khi cập nhật điểm');
                console.error(error);
            });
    }

    function editScore(scoreId) {
        window.location.href = '@Url.Action("EditScore", "Admin")?scoreId=' + scoreId;
    }

    function exportToExcel() {
        window.location.href = '@Url.Action("ExportClassScores", "Admin")?classId=@Model.ClassId&termId=@Model.TermId';
    }
</script>