@model List<QuanLyDiemRenLuyen.Models.TablespaceInfo>
@{
    ViewBag.Title = "Tablespaces";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="padding: 24px;">
    <div style="margin-bottom: 24px;">
        <a href="@Url.Action("Index", "Database")" style="color: #64748b; text-decoration: none; font-weight: 500;">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div style="background: white; padding: 24px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
        @if (Model != null && Model.Any())
        {
            <table style="width: 100%; border-collapse: collapse;">
                <thead style="background: #f8fafc; border-bottom: 2px solid #e2e8f0;">
                    <tr>
                        <th style="padding: 16px; text-align: left; font-weight: 700; color: #0f172a;">Tablespace Name</th>
                        <th style="padding: 16px; text-align: right; font-weight: 700; color: #0f172a;">Total (MB)</th>
                        <th style="padding: 16px; text-align: right; font-weight: 700; color: #0f172a;">Used (MB)</th>
                        <th style="padding: 16px; text-align: right; font-weight: 700; color: #0f172a;">Free (MB)</th>
                        <th style="padding: 16px; text-align: left; font-weight: 700; color: #0f172a; width: 300px;">Usage</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ts in Model)
                    {
                        <tr style="border-bottom: 1px solid #f1f5f9;">
                            <td style="padding: 16px;">
                                <strong style="color: #0f172a;">@ts.Name</strong>
                            </td>
                            <td style="padding: 16px; text-align: right; color: #64748b;">
                                @ts.TotalSpaceMB.ToString("N2")
                            </td>
                            <td style="padding: 16px; text-align: right; color: #64748b;">
                                @ts.UsedSpaceMB.ToString("N2")
                            </td>
                            <td style="padding: 16px; text-align: right; color: #64748b;">
                                @ts.FreeSpaceMB.ToString("N2")
                            </td>
                            <td style="padding: 16px;">
                                <div style="display: flex; align-items: center; gap: 12px;">
                                    <div style="flex: 1; background: #e5e7eb; border-radius: 6px; height: 10px; overflow: hidden;">
                                        <div style="background: @ts.GetUsageColor(); height: 100%; width: @ts.UsagePercent%; transition: width 0.3s;"></div>
                                    </div>
                                    <span style="font-weight: 700; color: @ts.GetUsageColor(); min-width: 60px; font-size: 14px;">
                                        @ts.UsagePercent.ToString("0.00")%
                                    </span>
                                </div>
                                @if (ts.UsagePercent >= 90)
                                {
                                    <div style="margin-top: 4px; color: #ef4444; font-size: 12px;">
                                        <i class="fas fa-exclamation-triangle"></i> Critical
                                    </div>
                                }
                                else if (ts.UsagePercent >= 75)
                                {
                                    <div style="margin-top: 4px; color: #f59e0b; font-size: 12px;">
                                        <i class="fas fa-exclamation-circle"></i> Warning
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div style="text-align: center; padding: 60px; color: #9ca3af;">
                <i class="fas fa-database" style="font-size: 48px; margin-bottom: 16px; opacity: 0.5;"></i>
                <p style="font-size: 16px; margin: 0;">Không có tablespace nào</p>
            </div>
        }
    </div>
</div>
