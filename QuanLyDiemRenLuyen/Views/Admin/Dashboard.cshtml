@model QuanLyDiemRenLuyen.Models.AdminDashboardViewModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 32px;
    }

    .stat-card {
        background: white;
        padding: 24px;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .stat-icon {
        width: 56px;
        height: 56px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        color: white;
    }

    .stat-icon.blue {
        background: #2563eb;
    }

    .stat-icon.green {
        background: #16a34a;
    }

    .stat-icon.orange {
        background: #f59e0b;
    }

    .stat-icon.red {
        background: #dc2626;
    }

    .stat-icon.purple {
        background: #9333ea;
    }

    .stat-icon.teal {
        background: #0891b2;
    }

    .stat-info h3 {
        font-size: 28px;
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 4px;
    }

    .stat-info p {
        color: #64748b;
        font-size: 14px;
        margin: 0;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #0f172a;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .card {
        background: white;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        padding: 24px;
        margin-bottom: 24px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table th {
        background: #f8fafc;
        padding: 12px;
        text-align: left;
        font-weight: 600;
        color: #0f172a;
        border-bottom: 1px solid #e2e8f0;
        font-size: 14px;
    }

    .table td {
        padding: 12px;
        border-bottom: 1px solid #f1f5f9;
        font-size: 14px;
    }

    .table tr:hover {
        background: #f8fafc;
    }

    .badge {
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-pending {
        background: #fef3c7;
        color: #92400e;
    }

    .badge-approved {
        background: #d1fae5;
        color: #065f46;
    }

    .badge-rejected {
        background: #fee2e2;
        color: #991b1b;
    }

    .badge-open {
        background: #dbeafe;
        color: #1e40af;
    }

    .badge-closed {
        background: #f1f5f9;
        color: #475569;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 14px;
        display: inline-block;
        font-weight: 500;
    }

    .btn-primary {
        background: #2563eb;
        color: white;
        border: none;
    }

    .btn-primary:hover {
        background: #1e40af;
        text-decoration: none;
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 13px;
    }
</style>

<!-- Statistics Cards -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon blue">
            <i class="fas fa-calendar-alt"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.TotalActivities</h3>
            <p>Tổng hoạt động</p>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon orange">
            <i class="fas fa-clock"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.PendingActivities</h3>
            <p>Chờ phê duyệt</p>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon green">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.ApprovedActivities</h3>
            <p>Đã phê duyệt</p>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon purple">
            <i class="fas fa-users"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.TotalStudents</h3>
            <p>Sinh viên</p>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon teal">
            <i class="fas fa-user-check"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.TotalRegistrations</h3>
            <p>Lượt đăng ký</p>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon red">
            <i class="fas fa-file-alt"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.PendingProofs</h3>
            <p>Minh chứng chờ duyệt</p>
        </div>
    </div>
</div>

<!-- Recent Activities -->
<div class="card">
    <h3 class="section-title">
        <i class="fas fa-history"></i>
        Hoạt động gần đây
    </h3>
    @if (Model.RecentActivities.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Tiêu đề</th>
                    <th>Ngày tạo</th>
                    <th>Trạng thái</th>
                    <th>Phê duyệt</th>
                    <th>Đăng ký</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var activity in Model.RecentActivities)
                {
                    <tr>
                        <td>@activity.Title</td>
                        <td>@activity.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (activity.Status == "OPEN")
                            {
                                <span class="badge badge-open">Đang mở</span>
                            }
                            else if (activity.Status == "CLOSED")
                            {
                                <span class="badge badge-closed">Đã đóng</span>
                            }
                            else
                            {
                                <span class="badge">@activity.Status</span>
                            }
                        </td>
                        <td>
                            @if (activity.ApprovalStatus == "PENDING")
                            {
                                <span class="badge badge-pending">Chờ duyệt</span>
                            }
                            else if (activity.ApprovalStatus == "APPROVED")
                            {
                                <span class="badge badge-approved">Đã duyệt</span>
                            }
                            else if (activity.ApprovalStatus == "REJECTED")
                            {
                                <span class="badge badge-rejected">Từ chối</span>
                            }
                        </td>
                        <td>@activity.RegistrationCount</td>
                        <td>
                            <a href="@Url.RouteUrl("AdminActivities", new { action = "Approve", id = activity.Id })"
                                class="btn btn-sm btn-primary">
                                <i class="fas fa-check"></i> Duyệt
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="text-align: center; color: #999; padding: 20px;">Chưa có hoạt động nào</p>
    }
</div>

<!-- Recent Feedbacks -->
<div class="card">
    <h3 class="section-title">
        <i class="fas fa-comments"></i>
        Phản hồi gần đây
    </h3>
    @if (Model.RecentFeedbacks != null && Model.RecentFeedbacks.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Tiêu đề</th>
                    <th>Sinh viên</th>
                    <th>Ngày gửi</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.RecentFeedbacks)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.StudentName</td>
                        <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (item.Status == "SUBMITTED")
                            {
                                <span class="badge badge-pending">Chờ phản hồi</span>
                            }
                            else
                            {
                                <span class="badge badge-approved">Đã phản hồi</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Detail", "Feedbacks", new { id = item.Id })" class="btn btn-primary btn-sm">
                                <i class="fas fa-eye"></i> Xem
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="text-align: center; color: #999; padding: 20px;">Chưa có phản hồi nào</p>
    }
</div>

<!-- Pending Approvals -->
<div class="card">
    <h3 class="section-title">
        <i class="fas fa-clock"></i>
        Chờ phê duyệt
    </h3>
    @if (Model.PendingApprovals.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Tiêu đề</th>
                    <th>Người tạo</th>
                    <th>Ngày tạo</th>
                    <th>Loại</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PendingApprovals)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.OrganizerName</td>
                        <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (item.Type == "ACTIVITY")
                            {
                                <span class="badge badge-open">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge badge-pending">Minh chứng</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.RouteUrl("AdminActivities", new { action = "Approve", id = item.Id })"
                               class="btn btn-sm btn-primary">
                                <i class="fas fa-check"></i> Duyệt
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="text-align: center; color: #999; padding: 20px;">Không có mục nào chờ phê duyệt</p>
    }
</div>