@model QuanLyDiemRenLuyen.Models.CvhtClassesViewModel
@{
    ViewBag.Title = "Lớp chủ nhiệm";
    Layout = "~/Views/Shared/_LecturerLayout.cshtml";
}

<style>
    .page-header {
        margin-bottom: 25px;
    }

    .page-header h2 {
        margin: 0 0 8px 0;
        font-size: 24px;
        font-weight: 600;
        color: #0f172a;
    }

    .page-header p {
        margin: 0;
        font-size: 14px;
        color: #64748b;
    }

    .class-card {
        background: white;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        margin-bottom: 20px;
        overflow: hidden;
    }

    .class-header {
        background: #f8fafc;
        padding: 15px 20px;
        border-bottom: 1px solid #e2e8f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .class-header h4 {
        margin: 0;
        font-size: 18px;
        font-weight: 600;
        color: #0f172a;
    }

    .class-code-badge {
        background: #0ea5e9;
        color: white;
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 500;
    }

    .class-body {
        padding: 20px;
    }

    .stats-row {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .stat-box {
        flex: 1;
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 15px;
        background: #f8fafc;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
    }

    .stat-icon {
        width: 45px;
        height: 45px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        color: white;
    }

    .stat-icon.blue { background: #0ea5e9; }
    .stat-icon.green { background: #22c55e; }

    .stat-info h5 {
        margin: 0;
        font-size: 22px;
        font-weight: 700;
        color: #0f172a;
    }

    .stat-info p {
        margin: 2px 0 0;
        font-size: 13px;
        color: #64748b;
    }

    .last-update {
        font-size: 13px;
        color: #64748b;
        margin-bottom: 15px;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background: #0ea5e9;
        color: white;
    }

    .btn-secondary {
        background: #f1f5f9;
        color: #475569;
        border: 1px solid #e2e8f0;
    }

    .empty-state {
        text-align: center;
        padding: 60px 30px;
        background: white;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
    }

    .empty-state i {
        font-size: 48px;
        color: #cbd5e1;
        margin-bottom: 15px;
    }

    .empty-state h4 {
        color: #475569;
        margin-bottom: 8px;
    }

    .empty-state p {
        color: #94a3b8;
        margin: 0;
    }

    @@media (max-width: 768px) {
        .stats-row {
            flex-direction: column;
        }
        .action-buttons {
            flex-direction: column;
        }
    }
</style>

<!-- Page Header -->
<div class="page-header">
    <h2><i class="fas fa-chalkboard-teacher"></i> Lớp chủ nhiệm</h2>
    <p>Quản lý phân quyền và theo dõi truy cập điểm rèn luyện</p>
</div>

@if (Model.Classes.Count == 0)
{
    <div class="empty-state">
        <i class="fas fa-inbox"></i>
        <h4>Chưa có lớp nào</h4>
        <p>Bạn chưa được phân công làm cố vấn học tập cho lớp nào.</p>
    </div>
}
else
{
    foreach (var classInfo in Model.Classes)
    {
        <div class="class-card">
            <div class="class-header">
                <h4><i class="fas fa-users"></i> @classInfo.ClassName</h4>
                <span class="class-code-badge">@classInfo.ClassCode</span>
            </div>
            <div class="class-body">
                <div class="stats-row">
                    <div class="stat-box">
                        <div class="stat-icon blue">
                            <i class="fas fa-user-graduate"></i>
                        </div>
                        <div class="stat-info">
                            <h5>@classInfo.StudentCount</h5>
                            <p>Sinh viên</p>
                        </div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-icon green">
                            <i class="fas fa-key"></i>
                        </div>
                        <div class="stat-info">
                            <h5>@classInfo.ActivePermissionsCount</h5>
                            <p>Quyền đang hoạt động</p>
                        </div>
                    </div>
                </div>

                @if (classInfo.LastPermissionGranted.HasValue)
                {
                    <div class="last-update">
                        <i class="fas fa-clock"></i> Cấp quyền gần nhất: @classInfo.LastPermissionGranted.Value.ToString("dd/MM/yyyy HH:mm")
                    </div>
                }

                <div class="action-buttons">
                    <a href="@Url.Action("Manage", "Permissions", new { classId = classInfo.ClassId })" class="btn btn-primary">
                        <i class="fas fa-cog"></i> Quản Lý Phân Quyền
                    </a>
                    <a href="@Url.Action("AccessLog", "Permissions", new { classId = classInfo.ClassId })" class="btn btn-secondary">
                        <i class="fas fa-history"></i> Xem Nhật Ký Truy Cập
                    </a>
                </div>
            </div>
        </div>
    }
}
