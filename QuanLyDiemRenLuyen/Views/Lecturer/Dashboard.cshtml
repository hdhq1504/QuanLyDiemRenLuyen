@model QuanLyDiemRenLuyen.Models.LecturerDashboardViewModel
@{
    ViewBag.Title = "Dashboard - Giảng viên";
    Layout = "~/Views/Shared/_LecturerLayout.cshtml";
}

<style>
    .dashboard-container {
        padding: 24px;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 32px;
    }

    .stat-card {
        background: white;
        padding: 24px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .stat-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
    }

    .stat-header {
        font-size: 14px;
        color: #64748b;
        margin-bottom: 12px;
        font-weight: 600;
    }

    .stat-value {
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 8px;
    }

    .stat-value.primary {
        color: #2563eb;
    }

    .stat-value.warning {
        color: #f59e0b;
    }

    .stat-value.success {
        color: #10b981;
    }

    .stat-value.info {
        color: #6366f1;
    }

    .content-section {
        background: white;
        padding: 24px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        margin-bottom: 24px;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 16px;
        border-bottom: 2px solid #f1f5f9;
    }

    .section-title {
        font-size: 20px;
        font-weight: 700;
        color: #0f172a;
    }

    .activity-item {
        padding: 16px;
        border-bottom: 1px solid #f1f5f9;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background 0.2s;
    }

    .activity-item:hover {
        background: #f8fafc;
    }

    .activity-item:last-child {
        border-bottom: none;
    }

    .activity-info h4 {
        margin: 0 0 8px 0;
        font-size: 16px;
        color: #0f172a;
        font-weight: 600;
    }

    .activity-meta {
        font-size: 13px;
        color: #64748b;
    }

    .activity-stats {
        text-align: right;
    }

    .badge {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
        margin-left: 8px;
    }

    .badge-pending {
        background: #fef3c7;
        color: #92400e;
    }

    .badge-approved {
        background: #d1fae5;
        color: #065f46;
    }

    .badge-rejected {
        background: #fee2e2;
        color: #991b1b;
    }

    .badge-open {
        background: #dbeafe;
        color: #1e40af;
    }

    .badge-closed {
        background: #e5e7eb;
        color: #374151;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #9ca3af;
    }

    .empty-state i {
        font-size: 48px;
        margin-bottom: 16px;
        opacity: 0.5;
    }

    .empty-state p {
        font-size: 16px;
        margin: 0;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.3s;
        display: inline-block;
    }

    .btn-primary {
        background: #2563eb;
        color: white;
    }

    .btn-primary:hover {
        background: #1d4ed8;
    }
</style>

<div class="dashboard-container">
    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-header">Tổng hoạt động</div>
            <div class="stat-value primary">@Model.Statistics.TotalActivities</div>
            <div style="font-size: 13px; color: #64748b;">
                <i class="fas fa-calendar-alt"></i> Đã tạo
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-header">Chờ phê duyệt</div>
            <div class="stat-value warning">@Model.Statistics.PendingActivities</div>
            <div style="font-size: 13px; color: #64748b;">
                <i class="fas fa-clock"></i> Hoạt động
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-header">Đã phê duyệt</div>
            <div class="stat-value success">@Model.Statistics.ApprovedActivities</div>
            <div style="font-size: 13px; color: #64748b;">
                <i class="fas fa-check-circle"></i> Hoạt động
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-header">Tổng sinh viên</div>
            <div class="stat-value info">@Model.Statistics.TotalStudentsRegistered</div>
            <div style="font-size: 13px; color: #64748b;">
                <i class="fas fa-users"></i> Đã đăng ký
            </div>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="content-section">
        <div class="section-header">
            <h3 class="section-title"><i class="fas fa-calendar-check"></i> Hoạt động gần đây</h3>
            <a href="@Url.Action("Index", "Activities", new { area = "Lecturer" })" class="btn btn-primary">
                <i class="fas fa-list"></i> Xem tất cả
            </a>
        </div>

        @if (Model.RecentActivities != null && Model.RecentActivities.Count > 0)
        {
            foreach (var activity in Model.RecentActivities)
            {
                <div class="activity-item">
                    <div class="activity-info">
                        <h4>@activity.Title</h4>
                        <div class="activity-meta">
                            <i class="fas fa-calendar"></i> @activity.StartAt.ToString("dd/MM/yyyy HH:mm") - @activity.EndAt.ToString("dd/MM/yyyy HH:mm")
                            <span class="badge @(activity.Status == "OPEN" ? "badge-open" : "badge-closed")">
                                @(activity.Status == "OPEN" ? "Đang mở" : "Đã đóng")
                            </span>
                            <span class="badge @(activity.ApprovalStatus == "PENDING" ? "badge-pending" : activity.ApprovalStatus == "APPROVED" ? "badge-approved" : "badge-rejected")">
                                @(activity.ApprovalStatus == "PENDING" ? "Chờ duyệt" : activity.ApprovalStatus == "APPROVED" ? "Đã duyệt" : "Từ chối")
                            </span>
                        </div>
                    </div>
                    <div class="activity-stats">
                        <div style="font-size: 14px; color: #64748b; margin-bottom: 4px;">
                            <i class="fas fa-users"></i> @activity.TotalRegistered sinh viên
                        </div>
                        <div style="font-size: 14px; color: #10b981; font-weight: 600;">
                            <i class="fas fa-check"></i> @activity.TotalCheckedIn đã điểm danh
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-calendar-times"></i>
                <p>Chưa có hoạt động nào</p>
            </div>
        }
    </div>

    <!-- Pending Approvals -->
    @if (Model.PendingApprovals != null && Model.PendingApprovals.Count > 0)
    {
        <div class="content-section">
            <div class="section-header">
                <h3 class="section-title"><i class="fas fa-tasks"></i> Minh chứng chờ duyệt</h3>
            </div>

            @foreach (var approval in Model.PendingApprovals)
            {
                <div class="activity-item">
                    <div class="activity-info">
                        <h4>@approval.Title</h4>
                        <div class="activity-meta">
                            <i class="fas fa-file"></i> @approval.OrganizerName
                            <span style="margin-left: 16px;">
                                <i class="fas fa-clock"></i> @approval.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            </span>
                        </div>
                    </div>
                    <div>
                        <span class="badge badge-pending">Chờ duyệt</span>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        console.log('Lecturer Dashboard loaded successfully!');
    </script>
}
